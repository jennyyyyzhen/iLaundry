<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NorthDorm">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="3 washers, 3 dryers"
        android:textSize="20sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/North_dryer_1"
        android:layout_width="88dp"
        android:layout_height="52dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="200dp"
        android:onClick="changeStatus"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/North_dryer_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:onClick="changeStatus"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@+id/North_dryer_1"
        app:layout_constraintStart_toEndOf="@+id/North_dryer_1" />


    <Button
        android:id="@+id/North_dryer_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:onClick="changeStatus"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@+id/North_dryer_1"
        app:layout_constraintStart_toEndOf="@+id/North_dryer_2" />


    <Button
        android:id="@+id/North_washer_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:onClick="changeStatus"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/North_dryer_1" />

    <Button
        android:id="@+id/North_washer_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:onClick="changeStatus"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@+id/North_washer_1"
        app:layout_constraintStart_toEndOf="@+id/North_washer_1" />

    <Button
        android:id="@+id/North_washer_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:onClick="changeStatus"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@+id/North_washer_1"
        app:layout_constraintStart_toEndOf="@+id/North_washer_2" />

</androidx.constraintlayout.widget.ConstraintLayout>